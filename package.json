{
    "name": "google-translate",
    "displayName": "google-translate",
    "description": "A extension to translate something between english and chinese by google.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:translates.translates"
    ],
    "main": "./src/extension",
    "contributes": {
        "commands": [
            {
                "command": "translates.translates",
                "title": "Translates"
            }
        ],
        "keybindings": [{
            "command": "translates.translates",
            "key": "ctrl+shift+t",
            "mac": "cmd+shift+t",
            "when": "editorTextFocus"
        }, {
            "command": "translates.clipboard",
            "key": "alt+t",
            "mac": "options+t",
            "when": "editorTextFocus"
        }, {
            "command": "translates.candidate",
            "key": "shift+alt+t",
            "mac": "shift+options+t",
            "when": "editorTextFocus"
        }]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "clipboardy": "^1.2.3",
        "iconv-lite": "^0.4.24",
        "request": "^2.88.0",
        "request-promise": "^4.2.2",
        "urlencode": "^1.1.0"
    }
}
