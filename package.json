{
    "name": "google-translate",
    "publisher": "hancel",
    "displayName": "Google Translate",
    "description": "A extension uses to translate words between english and chinese by google.",
    "keywords": [
        "Google",
        "Translate",
        "english",
        "chinese"
    ],
    "version": "1.0.9",
    "repository": "https://github.com/imlinhanchao/vsc-google-translate",
    "engines": {
        "vscode": "^1.30.0"
    },
    "icon": "asserts/icon.png",
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:*.*",
        "onCommand:translates.translates",
        "onCommand:translates.clipboard",
        "onCommand:translates.replace",
        "onCommand:translates.hover",
        "onCommand:translates.candidate"
    ],
    "main": "./src/extension",
    "contributes": {
        "hoverProvider": "true",
        "commands": [
            {
                "command": "translates.translates",
                "title": "Translates"
            },
            {
                "command": "translates.clipboard",
                "title": "Translate and Copy"
            },
            {
                "command": "translates.replace",
                "title": "Translate and Replace"
            },
            {
                "command": "translates.candidate",
                "title": "Translate Candidate Result"
            },
            {
                "command": "translates.hover",
                "title": "Switch Hover Translation"
            }
        ],
        "keybindings": [
            {
                "command": "translates.translates",
                "key": "ctrl+shift+t",
                "mac": "cmd+shift+t",
                "when": "editorHasSelection"
            },
            {
                "command": "translates.clipboard",
                "key": "alt+t",
                "mac": "options+t",
                "when": "editorHasSelection"
            },
            {
                "command": "translates.replace",
                "key": "alt+ctrl+t",
                "mac": "options+cmd+t",
                "when": "editorHasSelection"
            },
            {
                "command": "translates.candidate",
                "key": "shift+alt+t",
                "mac": "shift+options+t",
                "when": "editorHasSelection"
            },
            {
                "command": "translates.hover",
                "key": "ctrl+k alt+t",
                "mac": "cmd+k options+t",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "clipboardy": "^1.2.3"
    }
}
